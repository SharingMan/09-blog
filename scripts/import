#!/bin/bash

# Notion 导入快捷脚本
# 使用方法：./scripts/import <markdown文件路径>

cd "$(dirname "$0")/.."

if [ $# -eq 0 ]; then
  echo "使用方法: ./scripts/import <markdown文件路径> [选项]"
  echo ""
  echo "选项:"
  echo "  --title \"标题\""
  echo "  --date \"2025-01-17\""
  echo "  --category \"分类\""
  echo "  --tags \"标签1,标签2\""
  echo ""
  echo "示例:"
  echo "  ./scripts/import ~/Downloads/周记.md"
  echo "  ./scripts/import ~/Downloads/周记.md --title \"我的周记\" --date \"2026-01-17\""
  exit 1
fi

# 加载 Node.js 环境
export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"

# 运行导入脚本
node scripts/import-notion.js "$@"
